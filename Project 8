	   }
	   cout << "\n";
   }
    cout << "The middle row is: " << a[1][0] << " " << a[1][1] <<" " << a[1][2] << endl;

	cout << "The middle column is: " << a[0][1] << " " << a[1][1] <<" " << a[2][1] << endl;

